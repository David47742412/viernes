@using Dulcepastel.Models.tipoDocumento;
@using Dulcepastel.Models.cliente;
@model Cliente

@{
    ViewData["Title"] = "Clientes";
}

<!doctype html>
<html lang="es" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="css/style/Cliente/clienteStyle.css" type="text/css" rel="stylesheet"/>
    <title>Clientes</title>
</head>
<body>
<div class="mainTitleText">
    <h1>Clientes</h1>
    <p>Administración de clientes</p>
</div>
<div class="container">
    @{var listdocs = new TipoDocumento();}
    <form asp-action="Action" method="post">
        <div class="backGroundForm">
            <div class="row g-0">
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="Id" type="text" class="form-control" id="txtId" placeholder=" ">
                    <label asp-for="Id" class="" for="txtId">Código</label>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="Nombre" type="text" class="form-control" id="txtNombre" placeholder=" " required>
                    <label asp-for="Nombre" class="" for="txtNombre">Nombre</label>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="Apellido" type="text" class="form-control" id="txtApellido" placeholder=" " required>
                    <label asp-for="Apellido" for="txtApellido">Apellido</label>
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    @foreach (var items in listdocs.Find("", ""))
                    {
                        <select asp-for="TipoDocId" type="text" class="form-control" id="listTipoDocId" placeholder=" " required>
                            <option value="@items.Value1">
                                @items.Value2
                            </option>
                        </select>
                        <label asp-for="Apellido" for="txtApellido">Tipo de Documento</label>
                    }
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="NroDoc" type="text" class="form-control" id="txtNroDoc" placeholder=" " required>
                    <label asp-for="NroDoc" class="" for="txtNroDoc">N° documento</label>
                    <span asp-validation-for="NroDoc" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="Direccion" type="text" class="form-control" id="txtDireccion" placeholder=" " required>
                    <label asp-for="Direccion" class="" for="txtDireccion">Dirección</label>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="Celular" type="text" class="form-control" id="txtCelular" placeholder=" " required>
                    <label asp-for="Celular" class="" for="txtCelular">Celular</label>
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="TelFijo" type="text" class="form-control" id="txtTelfFijo" placeholder=" " required>
                    <label asp-for="TelFijo" class="form-label" for="txtTelfFijo">Telefono Fijo</label>
                    <span asp-validation-for="TelFijo" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input asp-for="FNacimiento" class="form-control" id="dtFNacimiento"/>
                    <label asp-for="FNacimiento" class="form-label">Fecha de Nacimiento</label>
                    <span asp-validation-for="FNacimiento" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <select name="accion" type="text" class="form-control" id="listAccion" placeholder=" " required>
                        <option value="1">
                            Agregar Cliente
                        </option>
                        <option value="2">
                            Consulta Cliente
                        </option>
                        <option value="3">
                            Modificar Cliente
                        </option>
                        <option value="4">
                            Eliminar Cliente
                        </option>
                    </select>
                    <label asp-for="Apellido" for="txtApellido">Acción a realizar</label>
                </div>
                <div class="form-floating mb-2 col-md-3 paddingTopFind SizeListFind">
                    <select name="find" type="text" class="form-control" id="listFind" placeholder=" " required>
                        <option value="Id">
                            código
                        </option>
                        <option value="Nombre">
                            nombre
                        </option>
                        <option value="Apellido">
                            apellido
                        </option>
                        <option value="DesDocument">
                            tipo de Documento
                        </option>
                        <option value="NroDoc">
                            n° Documento
                        </option>
                        <option value="Direccion">
                            dirección
                        </option>
                        <option value="Celular">
                            celular
                        </option>
                        <option value="TelfFijo">
                            telefono Fijo
                        </option>
                        <option value="Email">
                            email
                        </option>
                        <option value="F_NACIMIENTO">
                            fecha de Nacimiento
                        </option>
                    </select>
                    <label for="listFind">Buscar por</label>
                </div>
                @{
                    <div class="form-floating mb-2 col-md-3 paddingTopFind">
                        <input type="text" class="form-control" id="txtBuscar" placeholder=" " required>
                        <label class="form-label" for="txtTelfFijo" id="lblFind">Ingrese el Código</label>
                    </div>
                }
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary styleButtonAction" value="Insert" type="submit" id="btnAccion">Registrar</button>
        </div>
    </form>
</div>
<table class="table table-striped-columns">
    <thead class="table-light">
    <tr>
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Tipo de Documento
        </th>
        <th>
            N° Documento
        </th>
        <th>
            Dirección
        </th>
        <th>
            Celular
        </th>
        <th>
            Telefono Fijo
        </th>
        <th>
            Email
        </th>
        <th>
            Fecha de Nacimiento
        </th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    @{
        var client = new Cliente();
        @foreach (var item in client.Find("", ""))
        {
            <tr>
                <td>
                    @item.Value1
                </td>
                <td>
                    @item.Value2
                </td>
                <td>
                    @item.Value3
                </td>
                <td>
                    @item.Value4
                </td>
                <td>
                    @item.Value5
                </td>
                <td>
                    @item.Value6
                </td>
                <td>
                    @item.Value7
                </td>
                <td>
                    @item.Value8
                </td>
                <td>
                    @item.Value9
                </td>
                <td>
                    @{
                        var fecha = item.Value10?.ToString();
                        fecha = fecha == "1/01/1900 00:00:00" ? "no asignado" : fecha?.Substring(0, 10);
                    }
                    @fecha
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<script src="js/clientes/clientesFind.js" type="text/javascript"></script>
</body>
</html>