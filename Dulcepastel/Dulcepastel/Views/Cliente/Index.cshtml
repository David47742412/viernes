@using Dulcepastel.Models.tipoDocumento;
@using Dulcepastel.Models.cliente;
@using Dulcepastel.Models.utility.structView;
@model List<GenericView>

@{
    ViewData["Title"] = "Clientes";
}

<!doctype html>
<html lang="es" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="css/style/Cliente/clienteStyle.css" type="text/css" rel="stylesheet"/>
    <title>Clientes</title>
</head>
<body>
<div class="mainTitleText">
    <h1>Clientes</h1>
    <p>Administración de clientes</p>
</div>
<div class="container">
    @{var listdocs = new TipoDocumento();}
    <form asp-action="Action" method="post">
        <div class="backGroundForm">
            <div class="row g-0">
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="Id" type="text" class="form-control" id="txtId" placeholder=" " disabled>
                    <label class="" for="txtId">Código</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="Nombre" type="text" class="form-control" id="txtNombre" placeholder=" " required>
                    <label class="" for="txtNombre">Nombre</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="Apellido" type="text" class="form-control" id="txtApellido" placeholder=" " required>
                    <label for="txtApellido">Apellido</label>
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    @foreach (var items in listdocs.Find("", ""))
                    {
                        <select name="TipoDocId" type="text" class="form-control" id="listTipoDocId" placeholder=" " required>
                            <option value="@items.Value1">
                                @items.Value2
                            </option>
                        </select>
                        <label for="listTipoDocId">Tipo de Documento</label>
                    }
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="NroDoc" type="text" class="form-control" id="txtNroDoc" placeholder=" " required>
                    <label class="" for="txtNroDoc">N° documento</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="Direccion" type="text" class="form-control" id="txtDireccion" placeholder=" " required>
                    <label class="" for="txtDireccion">Dirección</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="Celular" type="text" class="form-control" id="txtCelular" placeholder=" " required>
                    <label class="" for="txtCelular">Celular</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="TelFijo" type="text" class="form-control" id="txtTelfFijo" placeholder=" " required>
                    <label class="form-label" for="txtTelfFijo">Telefono Fijo</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="Email" type="text" class="form-control" id="txtEmail" placeholder=" " required>
                    <label class="form-label" for="txtEmail">Email</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <input name="fNacimiento" type="date" class="form-control" id="dtFNacimiento"/>
                    <label for="dtFNacimiento" class="form-label">Fecha de Nacimiento</label>
                </div>
                <div class="form-floating mb-2 col-md-3 splitComponents">
                    <select name="accion" type="text" class="form-control" id="listAccion" placeholder=" " required>
                        <option value="1">
                            Agregar Cliente
                        </option>
                        <option value="2">
                            Consulta Cliente
                        </option>
                        <option value="3">
                            Modificar Cliente
                        </option>
                        <option value="4">
                            Eliminar Cliente
                        </option>
                    </select>
                    <label for="txtApellido">Acción a realizar</label>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary styleButtonAction" value="Insert" type="submit" id="btnAccion">Registrar</button>
        </div>
    </form>
    <form>
        <div class="backGroundForm">
            <div class="row g-0">
                <div class="form-floating mb-2 col-md-3 paddingTopFind SizeListFind">
                    <select name="find" type="text" class="form-control" id="listFind" placeholder=" " required>
                        <option value="Id">
                            código
                        </option>
                        <option value="Nombre">
                            nombre
                        </option>
                        <option value="Apellido">
                            apellido
                        </option>
                        <option value="DesDocument">
                            tipo de Documento
                        </option>
                        <option value="NroDoc">
                            n° Documento
                        </option>
                        <option value="Direccion">
                            dirección
                        </option>
                        <option value="Celular">
                            celular
                        </option>
                        <option value="TelfFijo">
                            telefono Fijo
                        </option>
                        <option value="Email">
                            email
                        </option>
                        <option value="F_NACIMIENTO">
                            fecha de Nacimiento
                        </option>
                    </select>
                    <label for="listFind">Buscar por</label>
                </div>
                <div class="form-floating mb-2 col-md-3 paddingTopFind">
                    <input type="text" class="form-control" id="txtBuscar" placeholder=" " required>
                    <label class="form-label" for="txtTelfFijo" id="lblFind">Ingrese el Código</label>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary styleButtonAction" value="Insert" type="submit" id="btnFind">Registrar</button>
                </div>
            </div>
        </div>
    </form>
</div>
<table class="table table-striped-columns">
    <thead class="table-light">
    <tr>
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Tipo de Documento
        </th>
        <th>
            N° Documento
        </th>
        <th>
            Dirección
        </th>
        <th>
            Celular
        </th>
        <th>
            Telefono Fijo
        </th>
        <th>
            Email
        </th>
        <th>
            Fecha de Nacimiento
        </th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    @{
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Value1
                </td>
                <td>
                    @item.Value2
                </td>
                <td>
                    @item.Value3
                </td>
                <td>
                    @item.Value4
                </td>
                <td>
                    @item.Value5
                </td>
                <td>
                    @item.Value6
                </td>
                <td>
                    @item.Value7
                </td>
                <td>
                    @item.Value8
                </td>
                <td>
                    @item.Value9
                </td>
                <td>
                    @{
                        var fecha = item.Value10?.ToString();
                        fecha = (fecha == "01/01/1900 00:00:00" ? "no asignado" : fecha?.Substring(0, 10)) ?? "no asignado";
                    }
                    @fecha
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<script src="js/clientes/clientesFind.js" type="text/javascript"></script>
</body>
</html>