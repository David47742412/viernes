@using Dulcepastel.Models.usuario
@model Dulcepastel.Models.login.Login

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<!DOCTYPE html>
 
 <html lang="es">
 <head>
     <meta charset="UTF-8">
     <meta name="viewport"content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"><meta http-equiv="X-UA-Compatible" content="ie=edge">
     <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
     <link href="css/style/Login/loginStyle.css" rel="stylesheet"/>
 </head>
 <body>
 <div>
     <div class="container">
         <div class="titleText">
             <h1>Bienvenido</h1>
             <p>Hola Registrarte para comenzar</p>
             <div class="formLogin">
                 <form asp-action="Login" method="post">
                     <div class="form-floating mb-4 col-md-4 centerInputs">
                         <input asp-for="Email" type="email" class="form-control" id="txtEmail" placeholder=" ">
                         <label asp-for="Email" for="txtEmail">Email</label>
                         <span asp-validation-for="Email" class="text-danger"></span>
                     </div>
                     <div class="form-floating mb-4 col-md-4">
                         <input asp-for="Password" type="password" class="form-control" id="txtPassword" placeholder=" ">
                         <label asp-for="Password" for="txtPassword">Contraseña</label>
                     <span asp-validation-for="Password" class="text-danger"></span>
                     </div>
                     <div>
                        <button class="btn-dark mb-4 col-md-4" type="submit" id="btnIngresar">Ingresar</button>
                     </div>
                 </form>
             </div>
         </div>
     </div>
 </div>
 <script src="js/login/login.js" type="text/javascript"></script>
 </body>
 </html>