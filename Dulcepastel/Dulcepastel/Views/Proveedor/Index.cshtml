@using Dulcepastel.Models.utility.structView
@using Dulcepastel.Models.tipoDocumento
@model System.Collections.Generic.List<Dulcepastel.Models.utility.structView.GenericView>

@{
    ViewData["Title"] = "Proveedores";
    var proveedor = (GenericView?) ViewData["proveedor"] ?? new GenericView();
}

<!doctype html>
<html lang="es" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="css/style/Cliente/clienteStyle.css" type="text/css" rel="stylesheet"/>
    <title>Clientes</title>
</head>
<body>
<div class="mainTitleText">
    <h1>Proveedores</h1>
    <p>Administración de Proveedores</p>
</div>
<div class="container">
    @{ var listdocs = new TipoDocumento(); }
        <form asp-action="Action" method="post" asp-controller="Proveedor">
            <div class="backGroundForm">
                <div class="row g-0">
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Id" type="text" class="form-control" value="@proveedor.Value1" id="txtId" placeholder=" " disabled>
                        <label class="" for="txtId">Código</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Ruc" type="text" class="form-control" value="@proveedor.Value2" id="txtNombre" placeholder=" " required>
                        <label class="" for="txtNombre">N° de Ruc</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Ncomercial" type="text" class="form-control" value="@proveedor.Value3" id="txtApellido" placeholder=" " required>
                        <label for="txtApellido">Nombre Comercial</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        @foreach (var items in listdocs.Find("", "").Where(td => td.Value2 != "DNI"))
                        {
                            <select name="TipoDocId" type="text" class="form-control" id="listTipoDocId" placeholder=" " required>
                                <option value="@items.Value1">
                                    @items.Value2
                                </option>
                            </select>
                            <label for="listTipoDocId">Tipo de Documento</label>
                        }
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="RazonSocial" type="text" class="form-control" value="@proveedor.Value4" id="txtNroDoc" placeholder=" " required>
                        <label class="" for="txtNroDoc">Razon Social</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Celular" type="text" class="form-control" value="@proveedor.Value5" id="txtDireccion" placeholder=" " required>
                        <label class="" for="txtDireccion">Celular</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Telefono" type="text" class="form-control" value="@proveedor.Value6" id="txtTelfFijo" placeholder=" " required>
                        <label class="form-label" for="txtTelfFijo">Telefono Fijo</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="PaginaWeb" type="text" class="form-control" value="@proveedor.Value7" id="txtmil" placeholder=" " required>
                        <label class="form-label" for="txtEail">Pagina web</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Email" type="text" class="form-control" value="@proveedor.Value8" id="txtmal" placeholder=" " required>
                        <label class="form-label" for="txtEail">Email</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Direccion" type="text" class="form-control" value="@proveedor.Value9" id="txtEail" placeholder=" " required>
                        <label class="form-label" for="txtEail">Direccion</label>
                    </div>
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <input name="Descripcion" type="text" class="form-control" value="@proveedor.Value10" id="txtEmil" placeholder=" " required>
                        <label class="form-label" for="txtEail">Descripción</label>
                    </div>
                    
                    <div class="form-floating mb-2 col-md-3 splitComponents">
                        <select name="accion" type="text" class="form-control" id="listAccion" placeholder=" " required>
                            <option value="1">
                                Agregar Cliente
                            </option>
                            <option value="2">
                                Modificar Cliente
                            </option>
                            <option value="3">
                                Eliminar Cliente
                            </option>
                        </select>
                        <label for="txtApellido">Acción a realizar</label>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary styleButtonAction" value="Insert" type="submit" id="btnAccion">Registrar</button>
            </div>
        </form>
        <form asp-action="Index" asp-controller="Proveedor">
        <div>
            <div class="row g-0">
                <div class="form-floating mb-2 col-md-3 paddingTopFind" style="width: 16%; margin-bottom: 2.5em">
                    <select name="param" type="text" class="form-control" id="listFind" placeholder=" " required>
                        <option value="Id">
                            código
                        </option>
                        <option value="Ruc">
                            Numero de Ruc
                        </option>
                        <option value="NComercial">
                            Nombre Comercial
                        </option>
                        <option value="RazonSocial">
                            Razon Social
                        </option>
                        <option value="Celular">
                            Celular
                        </option>
                        <option value="Telefono">
                            Telefono
                        </option>
                        <option value="PaginaWeb">
                            PaginaWeb
                        </option>
                        <option value="Email">
                            Email
                        </option>
                        <option value="Direccion">
                            Direccion
                        </option>
                        <option value="Descripcion">
                            Descripcion
                        </option>
                    </select>
                    <label for="listFind">Buscar por</label>
                </div>
                <div class="form-floating mb-2 col-md-3 paddingTopFind">
                    <input type="text" class="form-control" id="txtBuscar" name="data" placeholder=" " required>
                    <label class="form-label" for="txtTelfFijo" id="lblFind">Ingrese el Código</label>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary styleButtonAction" type="submit" id="btnFind">Buscar</button>
                </div>
            </div>
        </div>
    </form>
</div>
<table class="table table-striped-columns">
    <thead class="table-light">
    <tr>
        <th>
            Código
        </th>
        <th>
            Ruc
        </th>
        <th>
            Nombre Comercial
        </th>
        <th>
            Razon Social
        </th>
        <th>
            Celular
        </th>
        <th>
            Telefono
        </th>
        <th>
            Pagina
        </th>
        <th>
            Email
        </th>
        <th>
            Dirección
        </th>
        <th>
            Descripción
        </th>
        <th>
            Tipo de Documento
        </th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    @{
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Value1
                </td>
                <td>
                    @item.Value2
                </td>
                <td>
                    @item.Value3
                </td>
                <td>
                    @item.Value4
                </td>
                <td>
                    @item.Value5
                </td>
                <td>
                    @item.Value6
                </td>
                <td>
                    @item.Value7
                </td>
                <td>
                    @item.Value8
                </td>
                <td>
                    @item.Value9
                </td>
                <td>
                    @item.Value10
                </td>
                <td>
                    @item.Value11
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<script src="js/clientes/clientesFind.js" type="text/javascript" ></script>
</body>
</html>