@model IEnumerable<Dulcepastel.Models.tipoDocumento.TipoDocumento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Descripción
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoDocId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TipoDocId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoDocId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
